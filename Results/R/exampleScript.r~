A <- array(c(0,0,1,1),dim=c(2,2)) # R^2:[0,1]X[0,1]

source("splitDomain.r")

# UNIFORM ************************************************
x.ex =abs(runif(100, 0, 1))
y.ex =abs(runif(100, 0, 1))

#x=abs(rnorm(100, mean=0, sd=0.2))
#y=abs(rnorm(100, mean=0, sd=0.2))

splitDomain(x.ex, y.ex, A, spliter="cardinal", 15, "goodCard2.pdf")

